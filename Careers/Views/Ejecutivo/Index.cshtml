

@model Careers.Domain.Ejecutivos


@{
    ViewBag.Title = "Lista de Ejecutivos";
}
<ul class="nav nav-pills">
    <li class="nav-item">

    </li>
</ul>
<br />
<div>
    <hr />
    <h3 style="text-align:center; margin: 0 auto;">Perfiles de los Ejecutivos</h3>
    <button class="btn btn-primary" type="submit" style="text-align:right;  background-color: white; margin: 0 auto;">@Html.ActionLink("Nuevo Ejecutivo", "Create")</button>

    <hr />
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Citas Completadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Citas Pendientes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Citas Canceladas</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <br />
        <br />
        <table class="table-striped table-bordered table-sm" style="width: 50%; text-align:center; margin: 0 auto; " id="tbl-perfil-ejecutivos">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" style="width: 50%; text-align:center; margin: 0 auto; ">Nombre Ejecutivo</th>
                    <th scope="col">Citas Completadas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Dato)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td style="width: 50%; text-align:left; margin: 0 auto; ">@item.Ejecutivo &nbsp;&nbsp; @Html.ActionLink("Ver Perfil", "Details", new { id = @item.Id })</td>
                        <td><span class="badge badge-primary badge-pill">@item.Completado</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <p>Perfil</p>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <p>Contact</p>
    </div>
</div>







